<% if flash[:success] %>
    <div class="alert alert-success">
        <%= flash[:success] %>
    </div>
<% end %>
<% if flash[:error] %>
    <div class="alert alert-danger">
        <%= flash[:error] %>
    </div>
<% end %>
<h1>Lista de usuarios</h1>
<h2>Proceso para aceptar usuarios al sistema </h2>
</br>
<%= form_tag edit_multiple_users_path, method: :get do %>
    <table id="example" class="display" cellspacing="0" width="100%">
      <thead>
        <tr>
      	    <th></th>
            <th>Nombre</th>
            <th>correo</th>
            <th>Rol</th>
            <th>Eliminar</th>
        </tr>
      </thead>
      <tfoot>
        <tr>
      	    <th></th>
            <th>Nombre</th>
            <th>correo</th>
            <th>Rol</th>
            <th>Eliminar</th>
        </tr>
      </tfoot>
      <tbody>
        <% @users.each do |user| %> 
            <tr>
                <th><%= check_box_tag "users_ids[]", user.id  %></th>
                <th><%= user.name %></th>
                <th><%= user.email %></th>
                <th><%= user.rol %></th>
                <th><%= link_to "Eliminar", destroy_user_path(user), method: :delete, class: "btn btn-danger"  %></th>
            </tr>
        <% end %>
      </tbody>
    </table>
    <%= submit_tag "Editar", class: "btn btn-primary" %>
<% end %>
